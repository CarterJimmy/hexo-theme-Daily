<!-- Footer-widgets -->
<div class="footer-widgets">
  <div class="row inside-wrapper">
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title"><%= config.widget ? config.widget.title : theme.widget.title  %></h1>
        <div class="custom-widget-content">
          <% var widget_content = config.widget ? config.widget.content : (config.description || theme.widget.content) %>
          <%- widget_content %>
        </div>
      </aside>
    </div>
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title"><%- __('contact') %></h1>
        <div class="widget-text">
          <% if (config.social) { %>
            <% _.forIn(config.social, function(val, key){ %>
              <a href="<%- val %>" class="fa fa-<%- key %> fa-2x" target="_blank"></a>
            <% }) %>
            <!-- <%- key %>内为变量名称，class定义了名为“变量”的FontAwesome图标 -->
          <% } else { %>
            <% _.forIn(theme.social, function(val, key){ %>
              <a href="<%- val %>" class="fa fa-<%- key %> fa-2x" target="_blank"></a>
            <% }) %>
            <!-- 同上 -->
          <% } %>
        </div>
      </aside>
    </div>
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title"><%- __('search') %></h1>
        <div class="widget-text">
          <form onSubmit="return appDaily.submitSearch('<%- config.search_engines %>')">
            <div>
              <!-- 定义搜索框类型等，且光标触发搜索框时Value内的字样消失-->
              <input type="text" style="text-align: center"  id="homeSearchInput" value="..." onkeydown="if (event.keyCode==20) {}"  onblur="if(this.value=='')value='...';" onfocus="if(this.value=='...')value='';" value="..." />
            </div>
            <!-- <input type="submit" value="GO"> -->
          </form>
        </div>
      </aside>
    </div>
  </div>
</div>

<!-- Footer -->
<footer class="site-info">
  <p>
    <span><%- config.title %> &copy; <%= (new Date()).getFullYear() %></span>
    <% if(config.footer !== null) { %>
      <span class="split">|</span>
      <span><%- config.footer || theme.footer %></span>
    <% } %>
  </p>
  <!-- time -->
    <div id="show-time">
      <span id="span_dt_dt"></span>
    </div>
    <script>
        function show_date_time() {
          window.setTimeout("show_date_time()", 1000);
          BirthDay = new Date("12/12/2017 01:24:30");
          today = new Date();
          //总时间
          timeold = (today.getTime() - BirthDay.getTime());
          sectimeold = timeold / 1000
          secondsold = Math.floor(sectimeold);
          msPerDay = 24 * 60 * 60 * 1000
          e_daysold = timeold / msPerDay
          daysold = Math.floor(e_daysold);
          e_hrsold = (e_daysold - daysold) * 24;
          hrsold = Math.floor(e_hrsold);
          e_minsold = (e_hrsold - hrsold) * 60;
          minsold = Math.floor((e_hrsold - hrsold) * 60);
          seconds = Math.floor((e_minsold - minsold) * 60);
          span_dt_dt.innerHTML = "本站已运行 " + daysold + " 天 " + hrsold + " 小时 " + minsold + " 分 " + seconds + " 秒";
      }
  show_date_time();
    </script>
</footer>
